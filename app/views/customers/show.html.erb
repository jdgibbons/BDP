<p id="notice"><%= notice %></p>


  <h2><%= @customer.name %></h2>


  <h3>Contacts</h3>

  <table border="0" cellspacing="0" cellpadding="0" id="customer_show">
    <thead>
    <th align="left">Name</th>
    <th align="left">Telephone</th>
    <th align="left">Email</th>
    <th align="left"></th>
    </thead>
    <tbody class="items">
    <% @customer.contacts.each do |contact| %>

      <tr class="<%= cycle( "even", "odd" ) %>">
        <td><%= link_to contact.name, contact %></td>
        <td><%= contact.telephone %>
        <td><%= contact.email %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <% @customer.orders.each do |order| %>
    <p><%= generate_order_number_with_links(order) %>, <%= truncate(order.description, length: 100) %></p>
  <% end %>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
