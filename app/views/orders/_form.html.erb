<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <% if not @customer_is_new %>
      <%= f.label :customer %>
      <%= f.hidden_field :customer_id %>
      <%= f.autocomplete_field :customer, autocomplete_customer_name_suggestions_path, :id_element => '#order_customer_id' %>
    <% else %>
      <%= f.hidden_field :customer_id, "#{@customer.id}" %>
      <%= @customer.name %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :completion_date %>
    <%= f.text_field :completion_date, :value => date_mdY(@order.completion_date), :class => 'datepicker', style: "text-align: right" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <br>
    <%= f.text_area :description, cols: 60, rows: 10 %>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <br>
    <%= f.number_field :quantity %>
  </div>

  <div id="materialsvendors">
    <%= render :partial => "materials", :locals => {:f => f} %>
    <%= render :partial => "vendors", :locals => {:f => f} %>
  </div>
  <div id="laborequipmentals">
    <%= render :partial => "labors", :locals => {:f => f} %>
    <%= render :partial => "equipmentals", :locals => {:f => f} %>
  </div>

  <p class="clearboth"></p>

  <div class="field">
    <%= f.label :incidentals %>
    <%= f.text_field :incidentals, data: {autonumeric: {aSign: '$', mDec: 2}}, class: 'donuts', style: "text-align: right" %>
  </div>

  <div id="order_submit">
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
